{
	"settings": {
		"index" : {
            "number_of_shards" : 1,
            "number_of_replicas" : 0,
            "max_result_window": 20000
        },
		"analysis": {
			"analyzer": {
		        "custom_german": {
		          "tokenizer":  "standard",
		          "filter": ["lowercase", "german_normalization"]
		       	}
		    },
            "filter" : {
                "ascii_folding" : {
                    "type" : "asciifolding",
                    "preserve_original" : true
                }
            }
		}
	},
	"mappings": {
		"doc": {
			"properties": {
				"id":				{ "type": "keyword" },
				"index":			{ "type": "short" },
				"book": 			{ "type": "short" },
				"hymn": 			{ "type": "short" },
				"verse":			{ "type": "short" },
				"hymnAddressee":	{ "type": "keyword" },
				"hymnGroup":		{ "type": "keyword" },
				"strata":			{ "type": "keyword" },
				"translation": 		{ "type": "text", "analyzer": "custom_german", "similarity": "boolean" },
				"form": 			{ "type": "text", "similarity": "boolean" },
				"form_raw": 		{ "type": "text", "similarity": "boolean" },
				"lemmata": 			{ "type": "text", "similarity": "boolean" },
				"lemmata_raw": 		{ "type": "text", "similarity": "boolean" },
				"tokens": {
					"type": "nested",
					"properties": {
						"index":		{ "type": "short" },
						"form":			{ "type": "keyword" },
						"lemma":		{ "type": "text"}
					}
				}
			},
			"dynamic_templates": [
				{
				  	"morph_glossings": {
				  		"path_match":   "tokens.grammar.*",
					    "mapping": {
							"type": "keyword"
					    }
				  	}
				}
			]
		}
	}
}