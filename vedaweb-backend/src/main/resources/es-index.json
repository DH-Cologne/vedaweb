{
	"settings": {
		"index" : {
            "number_of_shards" : 1,
            "number_of_replicas" : 0,
            "max_result_window": 20000
        },
		"analysis": {
			"analyzer": {
				"default": {
				  "tokenizer":  "no_letter_split",
		          "filter": ["lowercase"]
				},
		        "custom_translation": {
		          "tokenizer":  "no_letter_split",
		          "filter": ["lowercase", "german_normalization"]
		       	}
		    },
		    "tokenizer": {
		    	"no_letter_split": {
					"type": "simple_pattern_split",
					"pattern": "[ ,.!?\\-_/+:;'\"]+"
		        }
		    }
		}
	},
	"mappings": {
		"properties": {
			"id":				{ "type": "keyword" },
			"index":			{ "type": "short" },
			"book": 			{ "type": "short" },
			"hymn": 			{ "type": "short" },
			"stanza":			{ "type": "short" },
			"hymnAbs":			{ "type": "short" },
			"hymnAddressee":	{ "type": "keyword" },
			"hymnGroup":		{ "type": "keyword" },
			"strata":			{ "type": "keyword" },
			"stanzaType":		{ "type": "keyword" },
			"versions": {
				"type": "nested",
				"properties": {
					"id": {"type": "keyword"},
					"source": {"type": "keyword"},
					"form": {
						"type": "text",
						"analyzer": "custom_translation",
						"similarity": "boolean",
						"fields": { "keyword": { "type": "keyword" } }
					},
					"form_raw": {
						"type": "text",
						"analyzer": "custom_translation",
						"similarity": "boolean",
						"fields": { "keyword": { "type": "keyword" } }
					},
					"metrical": {
						"type": "text",
						"analyzer": "custom_translation",
						"similarity": "boolean",
						"fields": { "keyword": { "type": "keyword" } }
					}
				}
	        },
			"tokens": {
				"type": "nested",
				"properties": {
					"index":		{ "type": "short" },
					"form":			{ "type": "keyword" },
					"form_raw":		{ "type": "keyword" },
					"lemma":		{ "type": "keyword" },
					"lemma_raw":	{ "type": "keyword" }
				}
			}
		},
		"dynamic_templates": [
			{
			  	"morph_glossings": {
			  		"path_match": "tokens.grammar.*",
				    "mapping": { "type": "keyword" }
			  	}
			}
		]
	}
}