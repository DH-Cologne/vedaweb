{
	"settings": {
		"index" : {
            "number_of_shards" : 1,
            "number_of_replicas" : 0,
            "max_result_window": 20000
        },
		"analysis": {
			"analyzer": {
				"default": {
				  "tokenizer":  "whitespace",
		          "filter": ["lowercase"]
				},
		        "custom_translation": {
		          "tokenizer":  "whitespace",
		          "filter": ["lowercase", "german_normalization"]
		       	}
		    }
		}
	},
	"mappings": {
		"doc": {
			"properties": {
				"id":				{ "type": "keyword" },
				"index":			{ "type": "short" },
				"book": 			{ "type": "short" },
				"hymn": 			{ "type": "short" },
				"stanza":			{ "type": "short" },
				"hymnAbs":			{ "type": "short" },
				"hymnAddressee":	{ "type": "keyword" },
				"hymnGroup":		{ "type": "keyword" },
				"strata":			{ "type": "keyword" },
				"versions": {
					"type": "nested",
					"properties": {
						"id": {"type": "keyword"},
						"form": {"type": "text", "analyzer": "custom_translation", "similarity": "boolean" },
						"form_raw": {"type": "text", "analyzer": "custom_translation", "similarity": "boolean" },
						"source": {"type": "keyword"}
					}
		        },
				"tokens": {
					"type": "nested",
					"properties": {
						"index":		{ "type": "short" },
						"form":			{ "type": "keyword" },
						"form_raw":		{ "type": "keyword" },
						"lemma":		{ "type": "text" },
						"lemma_raw":	{ "type": "text" }
					}
				}
			},
			"dynamic_templates": [
				{
				  	"morph_glossings": {
				  		"path_match":   "tokens.grammar.*",
					    "mapping": {
							"type": "keyword"
					    }
				  	}
				}
			]
		}
	}
}